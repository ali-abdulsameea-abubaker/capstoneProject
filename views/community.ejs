<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0" />
  <title>Community</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <div class="container">
    <h1>Community</h1>

    <form action="/community" method="POST" class="card">
      <h3>Create a Post</h3>
      <div>
        <label>Title</label>
        <input name="title" required />
      </div>
      <div>
        <label>Content</label>
        <textarea name="content" required rows="4"></textarea>
      </div>
      <button class="btn" type="submit">Post</button>
    </form>

    <div class="section">
      <h2>Latest Posts</h2>
      <% if (posts && posts.length) { %>
        <% posts.forEach(p => { %>
          <article class="card">
            <h3><%= p.title %></h3>
            <p><%= p.content %></p>
            <small>by <%= p.username %> • <%= new Date(p.created_at).toLocaleString() %></small>
            <form action="/community/<%= p.post_id %>/comments" method="POST" style="margin-top:10px">
              <input type="text" name="content" placeholder="Write a comment..." required />
              <button class="btn" type="submit">Comment</button>
            </form>
          </article>
        <% }) %>
      <% } else { %>
        <p>No posts yet.</p>
      <% } %>
    </div>

    <p><a class="btn" href="/dashboard">← Back to Dashboard</a></p>
  </div>
</body>
</html>
